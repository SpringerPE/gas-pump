#!/usr/bin/env ruby
require 'gas-pump' 

agent = GASPump.new

COMMAND = ARGV[0] || ""
ID = ARGV[1] || nil

case COMMAND.downcase
when "list"
	agent.create_table
when "download"
	if ID != nil
		agent.download_project(ID) 
	else
		puts "To download a file: gas-pump download <ID>"
	end
when "upload"
	puts "Uploading files"
when "create"
	puts "Creating files"
else
	puts "
	  Usage: gas-pump <command> [<arg>]
	  
	  Commands:
	    list                  -- lists the Google Apps Scripts projects on your Google Drive
	    download <ID>         -- downloads the project
	    upload <ID>           -- uploads the project
	    create <FOLDER_NAME>  -- creates the project

	  NOTE: The default path for downloading/uploading files is: #{agent.path}.
	 "
end
